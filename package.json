{
  "name": "cbf-site",
  "version": "0.1.0",
  "description": "A site for the NPM package CBF",
  "private": true,
  "dependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "@types/styled-components": "^4.1.16",
    "gh-pages": "^2.0.1",
    "husky": "^2.7.0",
    "lint-staged": "^13.1.0",
    "lodash": "^4.17.15",
    "prettier": "^1.18.2",
    "prism-react-renderer": "^0.1.7",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-github-btn": "^1.0.5",
    "react-github-corner": "^2.3.0",
    "react-scripts": "^3.3.0",
    "source-map-explorer": "^2.0.1",
    "styled-components": "^4.3.2",
    "tslint": "^5.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.2"
  },
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "lint": "tslint -c tslint.json 'src/**/*.tsx'",
    "test": "react-scripts test --transformIgnorePatterns \"node_modules/(?!(react-github-btn))/\"",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "tslint -c tslint.json 'src/**/*.tsx'",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshuatvernon/cbf-site.git"
  },
  "author": "Joshua Vernon",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/joshuatvernon/cbf-site/issues"
  },
  "homepage": "https://joshuatvernon.github.io/cbf-site",
  "devDependencies": {
    "tslint-config-prettier": "^1.18.0"
  }
}
